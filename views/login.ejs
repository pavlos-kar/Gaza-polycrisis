<%- include('partials/header') %>
<div style="max-width: 400px; margin: 4rem auto;">
    <h2>Login</h2>
    <form action="/login" method="POST" class="card">
        <div style="margin-bottom: 1rem;">
            <label>Username</label>
            <input type="text" name="username" required placeholder="e.g. GEORGIOS" style="width: 100%; padding: 0.5rem;">
        </div>
        <div style="margin-bottom: 1rem;">
            <label>Password</label>
            <input type="password" name="password" required placeholder="e.g. 1234Q!" style="width: 100%; padding: 0.5rem;">
        </div>
        <button type="submit" style="padding: 0.5rem 1rem; background: var(--c-black); color: #fff; border: none; width: 100%;">Login</button>
        
        <p style="margin-top: 1.5rem; text-align: center; font-size: 0.9rem; opacity: 0.8;">
            New to the platform? <a href="/register" style="color: var(--c-black); font-weight: bold;">Join here</a>
        </p>
    </form>
</div>
<%- include('partials/footer') %>