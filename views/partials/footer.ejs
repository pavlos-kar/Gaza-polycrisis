<script>
    /* Footer Modal Logic */
    function openFooterModal(id) {
        document.getElementById(id).style.display = 'flex';
    }
    function closeFooterModal(id) {
        document.getElementById(id).style.display = 'none';
    }

    /* Helper to save preferences */
    function savePreference(key, value) {
        localStorage.setItem(key, value);
    }

    function toggleHighContrast() {
        const isHigh = document.documentElement.classList.toggle('a11y-high-contrast');
        if (isHigh) {
            document.body.classList.add('high-contrast');
        } else {
            document.body.classList.remove('high-contrast');
        }
        savePreference('highContrast', isHigh);
    }

    /* ---------------------------------------------------------
       CRITICAL: INITIALIZE PREFERENCES ON PAGE LOAD
       --------------------------------------------------------- */
    function initPreferences() {
        // --- FIXED: Inject current user Tier from Server ---
        const userTier = <%= user ? user.tier : 0 %>;

        // 1. High Contrast (Syncs HTML and BODY)
        if (localStorage.getItem('highContrast') === 'true') {
            document.documentElement.classList.add('a11y-high-contrast');
            document.body.classList.add('high-contrast'); 
        } else {
            document.documentElement.classList.remove('a11y-high-contrast');
            document.body.classList.remove('high-contrast');
        }

        // 2. Activist Theme Logic
        if (userTier !== 2) {
            localStorage.removeItem('theme'); // Clear memory
            document.body.classList.remove('theme-activist');
        } else {
            if (localStorage.getItem('theme') === 'activist') {
                document.body.classList.add('theme-activist');
            }
        }

        // 3. Other Visual Tools
        if (localStorage.getItem('dyslexia') === 'true') document.body.classList.add('a11y-dyslexia');
        if (localStorage.getItem('largeText') === 'true') document.documentElement.classList.add('a11y-text-large');
        if (localStorage.getItem('links') === 'true') document.body.classList.add('a11y-links');
        if (localStorage.getItem('spacing') === 'true') document.body.classList.add('a11y-spacing');
