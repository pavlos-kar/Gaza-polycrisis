    function toggleA11yMenu() {
        const menu = document.getElementById('a11y-menu');
        const btn = document.getElementById('a11y-toggle');
        if (menu.style.display === 'flex') {
            menu.style.display = 'none';
            btn.classList.remove('active');
        } else {
            menu.style.display = 'flex';
            btn.classList.add('active');
        }
    }

    function toggleActivistTheme() {
        const isOn = document.body.classList.toggle('theme-activist');
        localStorage.setItem('theme', isOn ? 'activist' : 'normal');
    }

    function toggleLanguage() {
        const currentLang = localStorage.getItem('lang') || 'en';
        const newLang = currentLang === 'en' ? 'el' : 'en';
        applyLanguage(newLang);
    }

    function applyLanguage(lang) {
        localStorage.setItem('lang', lang);
        document.documentElement.lang = lang;
        document.querySelectorAll('[data-i18n]').forEach(el => {
            const key = el.getAttribute('data-i18n');
            if (translations[key] && translations[key][lang]) {
                const text = translations[key][lang];
                if (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA') {
                    el.placeholder = text;
                    el.setAttribute('aria-label', text);
                } else if (el.tagName === 'IMG') {
                    el.alt = text; el.title = text; 
                } else {
                    el.innerText = text;
                }
            }
        });
        const btn = document.getElementById('lang-btn');
        if (btn) btn.innerText = lang === 'en' ? "Switch to Greek (Ελληνικά)" : "Switch to English";
    }

    // Initialize logic immediately
    const savedLang = localStorage.getItem('lang') || 'en';
    applyLanguage(savedLang);
